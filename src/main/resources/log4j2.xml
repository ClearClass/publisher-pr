<Configuration status="debug">
   <Appenders>
      <File name="fout" fileName="info.log" append="false">
         <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
      </File>
   </Appenders>
   <Loggers>
      <Root level="debug">
         <AppenderRef ref="fout"/>
      </Root> 
   </Loggers>
</Configuration>